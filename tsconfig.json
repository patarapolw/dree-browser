{
  "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["es2015", "dom"],
      "allowSyntheticDefaultImports": true
  },
  "include": [
      "./src/**/*"
  ]
}